{
    "name": "Smartsheet Dashboard Overlay",
    "description": "This extension allows you to add custom shapes to Smartsheet's dashboard editing grid. This can help you to be more consistent with your widget placement.",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons": {
        "16": "images/dashboardIcon.png",
        "48": "images/dashboardIcon.png",
        "128": "images/dashboardIcon.png"
    },
    "action": {
        "default_title": "Click to add grid",
        "default_icon": "images/dashboardIcon.png"
    },
    "options_page": "pages/options.html",
    "permissions": ["activeTab", "scripting", "storage", "contextMenus"],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://app.smartsheet.com/dashboards/*"
    ]
}